<UserControl x:Class="VideoManager.Views.DiagnosticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:VideoManager.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500"
             d:DataContext="{d:DesignInstance Type=vm:DiagnosticsViewModel, IsDesignTimeCreatable=False}">

    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Disabled"
                  Padding="16">
        <StackPanel>

            <!-- ==================== Header ==================== -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                <md:PackIcon Kind="ChartBox"
                             Width="28" Height="28"
                             VerticalAlignment="Center"
                             Foreground="{DynamicResource PrimaryHueMidBrush}"
                             Margin="0,0,8,0"/>
                <TextBlock Text="诊断统计"
                           FontSize="20"
                           FontWeight="Medium"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- ==================== Memory Card ==================== -->
            <md:Card md:ElevationAssist.Elevation="Dp2"
                     UniformCornerRadius="4"
                     Margin="0,0,0,12"
                     Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <md:PackIcon Kind="Memory"
                                     Width="22" Height="22"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                     Margin="0,0,8,0"/>
                        <TextBlock Text="内存与缓存"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Managed Memory -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="托管内存"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0">
                                <Run Text="{Binding ManagedMemoryMb, Mode=OneWay}"/>
                                <Run Text="MB" FontSize="14" FontWeight="Normal"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Cache Count -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="缓存条目"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CacheCount, Mode=OneWay}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Cache Hit Rate -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="缓存命中率"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0">
                                <Run Text="{Binding CacheHitRate, Mode=OneWay, StringFormat={}{0:F1}}"/>
                                <Run Text="%" FontSize="14" FontWeight="Normal"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </md:Card>

            <!-- ==================== Performance Card ==================== -->
            <md:Card md:ElevationAssist.Elevation="Dp2"
                     UniformCornerRadius="4"
                     Margin="0,0,0,12"
                     Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <md:PackIcon Kind="SpeedometerMedium"
                                     Width="22" Height="22"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                     Margin="0,0,8,0"/>
                        <TextBlock Text="性能指标"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Average Import Time -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="平均导入耗时"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AvgImportTime, Mode=OneWay}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>

                        <!-- Average Search Time -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="平均搜索耗时"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding AvgSearchTime, Mode=OneWay}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </md:Card>

            <!-- ==================== Database Card ==================== -->
            <md:Card md:ElevationAssist.Elevation="Dp2"
                     UniformCornerRadius="4"
                     Margin="0,0,0,12"
                     Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <md:PackIcon Kind="Database"
                                     Width="22" Height="22"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                     Margin="0,0,8,0"/>
                        <TextBlock Text="数据库信息"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Database File Size -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="数据库大小"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock FontSize="24"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0">
                                <Run Text="{Binding DbFileSizeMb, Mode=OneWay}"/>
                                <Run Text="MB" FontSize="14" FontWeight="Normal"/>
                            </TextBlock>
                        </StackPanel>

                        <!-- Last Backup Time -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="最近备份时间"
                                       FontSize="12"
                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding LastBackupTime, Mode=OneWay}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </md:Card>

            <!-- ==================== Backup List Card ==================== -->
            <md:Card md:ElevationAssist.Elevation="Dp2"
                     UniformCornerRadius="4"
                     Margin="0,0,0,12"
                     Padding="16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <md:PackIcon Kind="BackupRestore"
                                     Width="22" Height="22"
                                     VerticalAlignment="Center"
                                     Foreground="{DynamicResource PrimaryHueMidBrush}"
                                     Margin="0,0,8,0"/>
                        <TextBlock Text="备份列表"
                                   FontSize="16"
                                   FontWeight="Medium"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <ItemsControl ItemsSource="{Binding Backups}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="{DynamicResource MaterialDesignDivider}"
                                        BorderThickness="0,0,0,1"
                                        Padding="0,8">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd HH:mm:ss}'}"
                                                       FontSize="14"
                                                       FontWeight="Medium"/>
                                            <TextBlock FontSize="12"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}">
                                                <Run Text="{Binding FilePath, Mode=OneWay}"/>
                                                <Run Text=" · "/>
                                                <Run Text="{Binding FileSizeBytes, Mode=OneWay, StringFormat={}{0:N0}}"/>
                                                <Run Text=" bytes"/>
                                            </TextBlock>
                                        </StackPanel>

                                        <Button Grid.Column="1"
                                                Command="{Binding DataContext.RestoreBackupCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                                ToolTip="从此备份恢复"
                                                Padding="8,4"
                                                VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <md:PackIcon Kind="DatabaseImport"
                                                             Width="16" Height="16"
                                                             VerticalAlignment="Center"
                                                             Margin="0,0,4,0"/>
                                                <TextBlock Text="恢复"
                                                           FontSize="12"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Empty state -->
                    <TextBlock Text="暂无备份文件"
                               HorizontalAlignment="Center"
                               FontSize="12"
                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                               Opacity="0.6"
                               Margin="0,8,0,0">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Backups.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
            </md:Card>

            <!-- ==================== Refresh Button ==================== -->
            <Button Command="{Binding RefreshCommand}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    HorizontalAlignment="Center"
                    Margin="0,4,0,16"
                    Padding="16,8">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="Refresh"
                                 Width="18" Height="18"
                                 VerticalAlignment="Center"
                                 Margin="0,0,6,0"/>
                    <TextBlock Text="手动刷新"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

        </StackPanel>
    </ScrollViewer>
</UserControl>
