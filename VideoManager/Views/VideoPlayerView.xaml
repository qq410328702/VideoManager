<UserControl x:Class="VideoManager.Views.VideoPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:VideoManager.ViewModels"
             xmlns:local="clr-namespace:VideoManager.Views"
             mc:Ignorable="d"
             d:DesignHeight="480" d:DesignWidth="720"
             d:DataContext="{d:DesignInstance Type=vm:VideoPlayerViewModel, IsDesignTimeCreatable=False}"
             Background="Black"
             Focusable="True"
             KeyDown="UserControl_KeyDown">

    <UserControl.Resources>
        <local:DurationFormatConverter x:Key="DurationFormatConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <!-- Video title bar -->
            <RowDefinition Height="Auto"/>
            <!-- Video display area -->
            <RowDefinition Height="*"/>
            <!-- Error overlay (auto-sized, collapsed when no error) -->
            <RowDefinition Height="Auto"/>
            <!-- Playback controls bar -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ==================== Video Title Bar ==================== -->
        <Border Grid.Row="0"
                Background="#CC000000"
                Padding="12,8"
                Panel.ZIndex="1">
            <TextBlock Text="{Binding CurrentVideo.Title, FallbackValue='无视频'}"
                       Foreground="White"
                       FontSize="15"
                       FontWeight="Medium"
                       TextTrimming="CharacterEllipsis"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- ==================== Video Display Area ==================== -->
        <Grid Grid.Row="1" Background="Black">
            <!-- MediaElement for video playback -->
            <MediaElement x:Name="VideoMediaElement"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Stretch="Uniform"
                          Volume="{Binding Volume, Mode=OneWay}"
                          MediaOpened="VideoMediaElement_MediaOpened"
                          MediaEnded="VideoMediaElement_MediaEnded"
                          MediaFailed="VideoMediaElement_MediaFailed"/>

            <!-- Placeholder when no video is loaded -->
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <StackPanel.Style>
                    <Style TargetType="StackPanel">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding CurrentVideo}" Value="{x:Null}">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </StackPanel.Style>
                <md:PackIcon Kind="VideoOutline"
                             Width="64" Height="64"
                             HorizontalAlignment="Center"
                             Foreground="#66FFFFFF"/>
                <TextBlock Text="双击视频开始播放"
                           Foreground="#66FFFFFF"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
        </Grid>

        <!-- ==================== Error Overlay ==================== -->
        <Border Grid.Row="2"
                Background="#CCFF5252"
                Padding="12,8"
                Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <md:PackIcon Kind="AlertCircleOutline"
                             Width="20" Height="20"
                             Foreground="White"
                             VerticalAlignment="Center"
                             Margin="0,0,8,0"/>
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="White"
                           FontSize="13"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

        <!-- ==================== Playback Controls Bar ==================== -->
        <Border Grid.Row="3"
                Background="#E6212121"
                Padding="8,6">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Progress slider row -->
                    <RowDefinition Height="Auto"/>
                    <!-- Controls row -->
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Progress / Position Slider -->
                <Slider x:Name="PositionSlider"
                        Grid.Row="0"
                        Minimum="0"
                        Maximum="100"
                        Value="{Binding PositionPercent, Mode=TwoWay}"
                        IsMoveToPointEnabled="True"
                        SmallChange="0.5"
                        LargeChange="5"
                        Margin="4,0,4,2"
                        Foreground="{DynamicResource PrimaryHueMidBrush}"
                        PreviewMouseLeftButtonDown="PositionSlider_PreviewMouseLeftButtonDown"
                        PreviewMouseLeftButtonUp="PositionSlider_PreviewMouseLeftButtonUp"
                        AutoToolTipPlacement="None"/>

                <!-- Controls Row -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <!-- Playback buttons -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Time display -->
                        <ColumnDefinition Width="Auto"/>
                        <!-- Spacer -->
                        <ColumnDefinition Width="*"/>
                        <!-- Volume controls -->
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Playback Buttons -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <!-- Play Button -->
                        <Button Command="{Binding PlayCommand}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Foreground="White"
                                ToolTip="播放"
                                Width="36" Height="36"
                                Padding="0">
                            <md:PackIcon Kind="Play" Width="22" Height="22"/>
                        </Button>

                        <!-- Pause Button -->
                        <Button Command="{Binding PauseCommand}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Foreground="White"
                                ToolTip="暂停"
                                Width="36" Height="36"
                                Padding="0">
                            <md:PackIcon Kind="Pause" Width="22" Height="22"/>
                        </Button>

                        <!-- Stop Button -->
                        <Button Command="{Binding StopCommand}"
                                Style="{StaticResource MaterialDesignIconButton}"
                                Foreground="White"
                                ToolTip="停止"
                                Width="36" Height="36"
                                Padding="0">
                            <md:PackIcon Kind="Stop" Width="22" Height="22"/>
                        </Button>
                    </StackPanel>

                    <!-- Time Display: Current / Total -->
                    <StackPanel Grid.Column="1"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="12,0,0,0">
                        <TextBlock Text="{Binding Position, Converter={StaticResource DurationFormatConverter}}"
                                   Foreground="#CCFFFFFF"
                                   FontSize="13"
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text=" / "
                                   Foreground="#88FFFFFF"
                                   FontSize="13"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding Duration, Converter={StaticResource DurationFormatConverter}}"
                                   Foreground="#CCFFFFFF"
                                   FontSize="13"
                                   FontFamily="Consolas"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Volume Controls -->
                    <StackPanel Grid.Column="3"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,4,0">
                        <!-- Speed Display -->
                        <TextBlock VerticalAlignment="Center"
                                   Foreground="#CCFFFFFF"
                                   FontSize="12"
                                   Margin="0,0,12,0"
                                   ToolTip="按 S 键切换速度">
                            <TextBlock.Text>
                                <Binding Path="PlaybackSpeed" StringFormat="{}{0:0.0}x"/>
                            </TextBlock.Text>
                        </TextBlock>

                        <!-- Volume Icon -->
                        <md:PackIcon Kind="VolumeHigh"
                                     Width="20" Height="20"
                                     Foreground="#CCFFFFFF"
                                     VerticalAlignment="Center"
                                     Margin="0,0,4,0"/>

                        <!-- Volume Slider (0.0 to 1.0) -->
                        <Slider x:Name="VolumeSlider"
                                Minimum="0"
                                Maximum="1"
                                Value="{Binding Volume, Mode=TwoWay}"
                                Width="100"
                                VerticalAlignment="Center"
                                IsMoveToPointEnabled="True"
                                SmallChange="0.05"
                                LargeChange="0.1"
                                Foreground="{DynamicResource PrimaryHueMidBrush}"
                                AutoToolTipPlacement="None"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
