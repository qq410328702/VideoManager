<Window x:Class="VideoManager.Views.BatchCategoryDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="批量移动到分类"
        Height="400" Width="380"
        MinHeight="300" MinWidth="300"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Style="{StaticResource MaterialDesignWindow}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Info text -->
            <RowDefinition Height="Auto"/>
            <!-- Category list -->
            <RowDefinition Height="*"/>
            <!-- Action buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
            <md:PackIcon Kind="FolderMove"
                         Width="28" Height="28"
                         VerticalAlignment="Center"
                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                         Margin="0,0,10,0"/>
            <TextBlock Text="选择目标分类"
                       FontSize="18"
                       FontWeight="Medium"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Info text -->
        <TextBlock Grid.Row="1"
                   x:Name="InfoText"
                   FontSize="13"
                   Foreground="{DynamicResource MaterialDesignBodyLight}"
                   Margin="0,0,0,12"
                   TextWrapping="Wrap"/>

        <!-- Category list (single select) -->
        <md:Card Grid.Row="2"
                 md:ElevationAssist.Elevation="Dp1"
                 UniformCornerRadius="4"
                 Margin="0,0,0,12">
            <TreeView x:Name="CategoryTreeView"
                      Background="Transparent"
                      BorderThickness="0"
                      Padding="4">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal" Margin="2">
                            <md:PackIcon Kind="Folder"
                                         Width="16" Height="16"
                                         VerticalAlignment="Center"
                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                         Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding Name}"
                                       VerticalAlignment="Center"
                                       FontSize="14"/>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </md:Card>

        <!-- Action buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    x:Name="ConfirmButton"
                    Click="ConfirmButton_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,0,8,0"
                    Padding="20,8"
                    ToolTip="确认移动到分类">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="Check" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="确认" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Grid.Column="2"
                    x:Name="CancelButton"
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Padding="20,8"
                    ToolTip="取消">
                <StackPanel Orientation="Horizontal">
                    <md:PackIcon Kind="Close" VerticalAlignment="Center" Margin="0,0,6,0"/>
                    <TextBlock Text="取消" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Window>
