<Window x:Class="VideoManager.Views.ConfirmDeleteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="删除确认"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource MaterialDesignWindow}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}">
    <StackPanel Margin="24">
        <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
            <md:PackIcon Kind="AlertCircleOutline" Width="28" Height="28"
                         Foreground="#FF9800" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBlock x:Name="MessageText" FontSize="15" FontWeight="Medium"
                       VerticalAlignment="Center" TextWrapping="Wrap" MaxWidth="350"/>
        </StackPanel>

        <TextBlock Text="请选择删除方式：" Foreground="{DynamicResource MaterialDesignBodyLight}"
                   Margin="0,0,0,16" FontSize="13"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="仅从库中移除" Click="RemoveFromLibrary_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,8,0" Padding="16,6"/>
            <Button Content="同时删除源文件" Click="DeleteFile_Click"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#EF5350" BorderBrush="#EF5350"
                    Margin="0,0,8,0" Padding="16,6"/>
            <Button Content="取消" Click="Cancel_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Padding="16,6"/>
        </StackPanel>
    </StackPanel>
</Window>
